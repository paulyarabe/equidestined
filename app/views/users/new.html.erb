<div class="main-container z-depth-5">
  <h3 class="txt-primary">Create User</h3>
  <%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit :class=>"waves-effect waves-light btn"%>
  <% end %>
</div>
